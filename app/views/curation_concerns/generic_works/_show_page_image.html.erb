<%# CHF custom, alternative to `representative_media` for show page, image
    with overlayed controls and info %>

<div class="show-page-image">
  <a href="javascript: alert('pretend its a viewer');" class="show-page-image-viewer-link"></a>
    <%= image_tag(main_app.download_path(file_set, file: "jpeg"),
                          class: "show-page-image-image",
                          alt: "",
                          role: "presentation") %>

    <div class="show-page-image-bar">
      <% if can?(:read, file_set.id) %>
        <div class="btn-group dropup">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Download
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to main_app.download_path(file_set),
                          target: "_new",
                          id: "file_download",
                          data: { label: file_set.id } do %>
                  Original Image
              <% end %>
            </li>
            <li class="divider"></li>
            <li><a>More download options coming</a></li>
          </ul>
        </div>
      <% end %>
      <% if respond_to?(:contextual_path) %>
        <%= link_to "Info", contextual_path(file_set, @presenter), class: "btn btn-primary show-page-image-info" %>
      <% end %>
    </div>
</div>



