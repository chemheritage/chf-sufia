<% if CurationConcerns.config.display_media_download_link %>
    <div>
      <h2 class="sr-only"><%= t('curation_concerns.show.downloadable_content.heading') %></h2>
      <%# image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
      <%= link_to image_tag(thumbnail_url(file_set),
                            class: "representative-media",
                            alt: "",
                            role: "presentation"),
                  "#", 
                  { "aria-label" => "Load preview image",
                    "data-target" => "#preview-#{file_set.id}",
                    "data-toggle" => "modal",
                    title: "Preview image in lightbox" } %>
      <%= link_to main_app.download_path(file_set),
                  target: "_new",
                  class: "btn btn-default" do %>
          <%= t('curation_concerns.show.downloadable_content.image_link') %>
      <% end %>
    </div>
<% else %>
    <div>
      <%= link_to image_tag(thumbnail_url(file_set),
                            class: "representative-media",
                            alt: "",
                            role: "presentation"),
                  "#", 
                  { "aria-label" => "Load preview image",
                    "data-target" => "#preview-#{file_set.id}",
                    "data-toggle" => "modal",
                    title: "Preview image in lightbox" } %>
    </div>
<% end %>
