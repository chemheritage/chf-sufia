<%# overrides https://github.com/projecthydra/sufia/blob/v7.3.0/app/views/_masthead.html.erb %>
<% if current_ability.current_user.staff? %>
  <%= render '/shared/select_work_type_modal' if create_work_presenter.many? %>
  <nav id="staff-navbar" class="navbar navbar-inverse navbar-static-top staff-navbar" role="navigation">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="staff-navbar-collapse">
        <%# TODO: make these collapse to hamburger on mobile? two hamburgers is weird but it takes up lots of space otherwise %>
        <%= render '/toolbar' %>
        <%= render '/user_util_links' %>
      </div>
    </div>
  </nav>
<% end %>
<nav id="masthead" class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= render '/logo' %>
    </div>

    <div class="collapse navbar-collapse" id="top-navbar-collapse">
      <div class="nav navbar-nav navbar-right">
        <li <%= 'class=active' if current_page?(sufia.about_path) %>>
          <%= link_to t(:'sufia.controls.about'), sufia.about_path, :'data-no-turbolink'=>"true" %></li>
        <li <%= 'class=active' if action_name == "help" %>>
          <%= link_to t(:'sufia.controls.help'), sufia.help_path %></li>
        <li <%= 'class=active' if current_page?(sufia.contact_path) %>>
          <%= link_to t(:'sufia.controls.contact'), sufia.contact_path %></li>
      </ul><!-- /.nav -->
    </div>
  </div>
</nav>
