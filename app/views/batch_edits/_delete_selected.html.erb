<%# only show destroy link for admin users %>
<%# here we only have access to @document_list, which we haven't keyed permissions on and it doesn't make sense to do so, really. %>
<% if current_ability.can?(:destroy, SolrDocument) %>
  <%= form_tag(batch_edits_path, method: :delete, class: "batch-select-all hidden button_to-inline", "data-behavior" => 'batch-select-all') do -%>
      <%= hidden_field_tag('update_type', 'delete_all') %>
      <%= hidden_field_tag('return_controller', params[:controller]) %>
    <%= submit_tag("Delete Selected", class: 'batch-all-button btn btn-danger submits-batches', data: { confirm: "Deleting a file from #{application_name} is permanent. Click OK to delete this file from #{application_name}, or Cancel to cancel this operation" }) %>
  <% end %>
<% end %>
