      <div class="footersocialicon"><a href="https://www.linkedin.com/company/<%= Rails.application.config.linked_in_company %>" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a></div>
      <div class="footersocialicon"><a href="https://www.pinterest.com/<%= Rails.application.config.pinterest_acct %>/" target="_blank"><i class="fa fa-pinterest" aria-hidden="true"></i></a></div>
