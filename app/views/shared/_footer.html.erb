<footer id="footer" role="contentinfo">
  <div class="footerrow footerlogo">
    <%= link_to "https://www.chemheritage.org", title: "Chemical Heritage Foundation Main Site" do %>
      <%= image_tag "chf_logo_above_name_white.svg", alt: "Chemical Heritage Foundation logo" %>
    <% end %>
  </div>

  <div class="footerrow">
    <div class="footeraddresses">
      <div class="firstaddress">
        <strong>Library • Museum • Center for Scholars</strong><br>315 Chestnut Street<br>Philadelphia, PA 19106<br>215.925.2222
      </div>
      <div class="secondaddress">
        <strong>CHF West</strong><br>2120 University Avenue<br>Berkeley, CA 94704<br>415.798.2104
      </div>
    </div>
  </div>

  <div class="footerrow">
    <div class="footersocialicons">
